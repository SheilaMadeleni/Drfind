<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Fragments.FragmentsMedico.registroMedicoHorario"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorAccent">
            <TextView
                android:id="@+id/texthorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coming_soon"
                android:text="Horarios"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textusuariomedic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coming_soon"
                android:text="UsuarioMedico"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="9:00-9:30"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="9:30-10:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="10:00-10:30"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="10:30-11:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="11:00-11:30"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="11:30-12:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="14:30-15:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                    <CheckBox
                        android:id="@+id/checkBox7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="15:00-15:30"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="15:30-16:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="16:00-16:30"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="16:30-17:00"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/checkBox11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:text="17:00-17:30"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
            android:id="@+id/btnguardarhoras"
            android:layout_width="234dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ovalo"
            android:fontFamily="@font/coming_soon"
            android:text="Guardar"
            android:textAlignment="center"
            android:textColor="#F8F8F8"
            android:textSize="18sp"
            android:textStyle="bold"/>
            <Button
                android:id="@+id/btnsatras1"
                android:layout_width="234dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ovalo"
                android:fontFamily="@font/coming_soon"
                android:text="Atras"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp"
                android:textStyle="bold"/>
      </LinearLayout>
    </ScrollView>

</RelativeLayout>