<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Fragments.FragmentsMedico.registroMedico">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        tools:context=".Vista.medico.regismedico">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:fontFamily="@font/coming_soon"
                android:text="Datos Personales"
                android:textAlignment="center"
                android:textColor="#F7F3F3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtusuamed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Usuario:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtusuamed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtcontramed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Contraseña:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtcontramed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtcontraconfimed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Confimrar:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtcontraconfimed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtnommed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Nombre:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtnommed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtapmed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Apellido Paterno:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtapmed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtammed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Apellido Materno:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtammed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Especialidad:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiespecialidad"
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spin"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtemailmed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="E-mail:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtemailmed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtcolegiaturamed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="N° Colegiatura:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtcolegiamed"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txttelefonomed"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Telefono:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edttelefonomed"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp"
                    android:maxLength="9"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtnacimientomed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coming_soon"
                    android:text="Fecha de Nacimiento:"
                    android:textColor="#F7F3F3"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtnacimed"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F6F6"
                    android:ems="10"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textColor="#FBF7F7"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnfechamedico"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_today_black_24dp"
                    android:backgroundTint="#FFFFFF"
                    android:foregroundTint="#FFFFFF"
                    android:shadowColor="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#515B79"
                    android:textColorHint="#FFFFFF"
                    android:textColorLink="#1C243D"
                    android:textCursorDrawable="@drawable/ic_today_black_24dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/txtresultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnsiguiente"
                android:layout_width="234dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/ovalo"
                android:fontFamily="@font/coming_soon"
                android:text="Siguiente"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="0" />
            <Button
                android:id="@+id/btncanregismedico"
                android:layout_width="234dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/ovalo"
                android:fontFamily="@font/coming_soon"
                android:text="Cancelar"
                android:textAlignment="center"
                android:textColor="#F8F8F8"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="0" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>